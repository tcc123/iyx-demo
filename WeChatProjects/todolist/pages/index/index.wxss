/**index.wxss**/
.container {
  padding: 20rpx;
  border-top: 1rpx solid #e5e5e5;
}

.header {
  width: 80%;
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  margin: 80rpx 0 20rpx 0;
  padding: 20rpx;
}

.header .new-todo {
  font-size: 28rpx;
}

.todos {
  width: 80%;
  margin-top:20px;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.todos .item {
  display: flex;
  align-items: center;
  /* overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  */
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.todos .item:last-child {
  border-bottom: 0;
}

.todos .item .name {
  flex: 1;
  font-size: 30rpx;
  color: #444;
}

.todos .item.completed .name {
  text-decoration: line-through;
  color: #888;
}
checkbox .wx-checkbox-input {
   width: 30rpx;
   height: 30rpx;
   border-radius: 50%!important;
}

.todos .item .remove {
  cursor: pointer;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 0 10rpx;
  font-size: 26rpx;
  color: #777;
}

.footer .btn {
  cursor: pointer;
  background:#179B16;
  border:1rpx solid #179B16;
  border-radius:10rpx;
  color:#fff;
  padding:2px 10px;
  margin:0 15px;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  font-size: 50rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #444;
}

.empty .content {
  color: #666;
  text-align: center;
}