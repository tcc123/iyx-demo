page{
  background: rgb(242, 239, 239);
}
.container{
  padding: 0;
  color: #a0a0a0;
}
.search{
  display: flex;  
  flex-direction: row;
  width: 692rpx;
  height: 58rpx;
  background: #fff;
  margin:10rpx 28rpx;
  border: 1px solid #fff;  
  border-radius: 10rpx;  
  font-size: 14px;
}
.searchcion {  
  margin: 10rpx 10rpx 10rpx 0rpx;  
  position: absolute;  
  left:25rpx;  
  z-index: 2;  
  width: 20px;  
  height: 20px; 
  padding: 0 20rpx;
  text-align: center;  
}  

.search .input{  
  margin-left: 60rpx;  
  height: 60rpx;  
}  
.newMovies{
  width: 750rpx;
  height: 845rpx;
  margin-bottom:20rpx;
  background: #fff;
}
.tit{
  width: 100%;
  height: 78rpx;
  font-size: 14px;
  padding-left: 25rpx;
  line-height: 78rpx;
  border-bottom: 1px solid rgb(242, 239, 239);
}
.newMovie{
  display: flex;
  flex-direction: row;
  height: 175rpx;
  width: 750rpx;
  padding: 25rpx;
  font-size: 12px;
}
.left{
  width: 130rpx;
  height: 180rpx;
  box-shadow: 0 0 8px #ccc;
}
.right{
  width: 525rpx;
  padding-left: 25rpx;
}
.name{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
}
.title{
  color: #000;
  font-size: 16px;
}
.rate{
  padding-left: 10rpx;
  color: #ca2100;
}
.num{
  display: flex;
  flex-direction: row;
  height: 45rpx;
  line-height: 45rpx;
}
.number{
  font-size: 15px;
  color: rgb(252, 194, 5);
  padding-right: 10rpx;
}
.actor,.date{
  line-height: 45rpx;
}
.all{
  border-top: 1px solid rgb(242, 239, 239);
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  color: #ca2100;
  font-size: 15px;
}
.top{
  width: 750rpx;
  height: auto;
  margin-bottom:20rpx;
  background: #fff;
}